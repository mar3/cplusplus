### Makefile

XTENT=~



# *****************************************************************************
# default
# *****************************************************************************
main.app: ${XTENT}main.o
	g++ ${XTENT}main.o -o main.app

${XTENT}main.o: main.cpp main.h
	g++ -c main.cpp -o ${XTENT}main.o



# *****************************************************************************
# clean
# *****************************************************************************
clean:
	rm ${XTENT}*.o *.app



